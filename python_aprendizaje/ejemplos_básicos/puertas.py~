#!/bin/python3.5

# Programa obtenido de hacker run, se le pasa lista con 0 y 1
def puertas( doors ):
    min = 0
    for i in range (len(doors)-3):
        if(doors[i]) == 1:
            if doors[ i : i+3] == [ 1,1,1]:
                min += 1
                i = i+2
            elif doors[ i+1] == 1:
                min += 1
                i += 1
            else:
                min += 1
    return [ min , doors.count(1)]

import sys
if __name__ == "__main__":
    n = int (input().strip())
    doors = list ( map( int, input().strip().split(' ')))
    result = puertas (doors)
    print( " ".join( map(str , result )))
